<div class="container mt-5 mb-5">
            <div class="d-flex justify-content-center row">
                <div class="col-md-8">
                    <div class="p-2">
                        <h4>Carts</h4>
                    </div>

                    {{#each userCarts}}
                        <div class="d-flex flex-row justify-content-between align-items-center border border-info p-2 bg-white mt-4 px-3 rounded">
                            <div class="mr-1">
                                <img class="rounded" src="/images/no_photo.svg" width="70">
                            </div>
                            <div class="d-flex flex-column align-items-center product-details">
                                <span class="font-weight-bold">{{this.product_id.title}}</span>
                                <div class="d-flex flex-row">
                                    <div class="mr-1">
                                        <span class="text-grey">Cantidad:</span>
                                        <span class="font-weight-bold">{{this.product_quantity}}</span>
                                    </div>                                    
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center qty">
                                <i class="fa fa-minus text-danger"></i>
                                <h5 class="text-grey mt-1 mr-1 ml-1">2</h5>
                                <i class="fa fa-plus text-success"></i>
                            </div>
                            <div>
                                <h5 class="text-grey">$ {{this.price}}</h5>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fa fa-trash mb-1 text-danger"></i>
                            </div>                        
                        </div>
                    {{/each}}                  
                    
                    <div class="d-flex gap-2 align-items-center mt-3 p-2 bg-white rounded">
                        <input type="text" class="form-control border-1 border-secondary gift-card" placeholder="discount code/gift card">
                        <button class="btn btn-outline-warning btn-md ml-2" type="button">Apply</button>
                    </div>
                    <div class="d-flex justify-content-center align-items-center mt-3 p-2 bg-white rounded">
                        <button class="btn btn-warning btn-block btn-lg ml-2 pay-button" type="button">Proceed to Pay</button>
                    </div>
                </div>
            </div>
        </div>